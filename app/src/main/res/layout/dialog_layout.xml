<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alertText"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/snoozelayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/snoozetext"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Snooze time :"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:visibility="visible"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/radioGroup_first">


            <RadioGroup
                android:weightSum="2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/dialogradioGroup1">

                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="5 min"
                    android:textColor="#000000"
                    android:id="@+id/fivemin"
                    android:checked="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="30 min"
                    android:id="@+id/thirteemin"
                    android:checked="false"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


            </RadioGroup>

            <RadioGroup
                android:weightSum="2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/dialogradioGroup2">

                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1 hr"
                    android:textColor="#000000"
                    android:id="@+id/onehr"
                    android:checked="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2 hr"
                    android:textColor="#000000"
                    android:id="@+id/twohour"
                    android:checked="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RadioGroup>

            <RadioGroup
                android:weightSum="2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/dialogradioGroup3">

                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="3 hr"
                    android:textColor="#000000"
                    android:id="@+id/threehr"
                    android:checked="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <RadioButton
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Next Day"
                    android:id="@+id/nextday"
                    android:checked="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RadioGroup>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:padding="10dp"
            android:background="@drawable/button_press"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Snooze"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/ID_Ok" />

        <Button
            android:padding="10dp"
            android:background="@drawable/button_press"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/ID_Cancel" />
    </LinearLayout>
</LinearLayout>
