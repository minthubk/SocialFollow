<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cathedrale.Reminders.EyenutritionReminderActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar_layout"></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/eyedrops_reminderlayout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:text="Eye drops Reminder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Repeat Reminder Everyday  :"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_margin="10dp"
                    android:id="@+id/timeedit1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="fill_parent"
                    android:textColor="#56a1ba"
                    android:hint="Enter Time"
                    android:gravity="center"
                    android:focusable="false"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/donereminder"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_press"
                    android:layout_alignParentBottom="true"
                    android:text="Done"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/cancelreminder"
                    android:layout_margin="10dp"
                    android:background="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:text="Cancel Reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
